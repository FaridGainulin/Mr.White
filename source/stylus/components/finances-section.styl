.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: linear-gradient(180deg, #010104 0%, #0d0e10 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0 50px 0
    +above($breakpoints.md)
      padding 70px 0 90px 0
    +above($breakpoints.xxl)
      padding 98px 0 130px 0

  &__icon
    position: absolute
    z-index -1
    width: 150px;
    height: auto;
    top: 0;
    left: -64px;
    +above($breakpoints.sm)
      width: 330px;
      top: 9px;
      left: -176px;
    +above($breakpoints.md)
      width: 470px;
      top: 0px;
      left: -257px;
    +above($breakpoints.xxl)
      width: 596px;
      top: 13px;
      left: -322px;

  &__sub-title
    padding 15px 0 20px 0
    color: #979797
    background-color #282828
    border-radius: 10px
    padding 15px 10px
    display: flex
    align-items: flex-start
    justify-content center
    gap: 5px
    margin 8px 0 10px 0
    +above($breakpoints.sm)
      justify-content start
      gap: 10px
      padding 15px 10px 15px 20px
      width: 400px;
      height: 62px;
      margin 20px 0 30px 0
    +above($breakpoints.md)
      gap: 15px
      padding 15px 10px 15px 25px
      width: 515px;
      height: 70px;
      margin 25px 0 60px 0
    +above($breakpoints.xxl)
      padding 22px 10px 22px 31px
      width 600px
      height: 90px
      gap: 20px
      margin 28px 0 82px 0

  &__sub-title-icon
    width 16px
    height: 16px
    +above($breakpoints.sm)
      width 20px
      height: 20px
    +above($breakpoints.md)
      width 22px
      height: 22px
    +above($breakpoints.xxl)
      width 24px
      height: 24px

  &__box
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      flex-direction: row-reverse
      gap: 20px
    +above($breakpoints.md)
      gap: 45px
    +above($breakpoints.xxl)
      gap: 49px

  &__box-right-text
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 40px
    +above($breakpoints.xxl)
      padding-bottom 55px
    
  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 35px 20px
    +above($breakpoints.md)
      gap: 45px 30px
    +above($breakpoints.xxl)
      gap: 66px 85px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    color: $color-grey
    +above($breakpoints.sm)
      align-items: flex-start
      width 140px !important
      height: 90px
    +above($breakpoints.md)
      width 180px !important
      height: 105px
    +above($breakpoints.xxl)
      width 202px !important
      height: 124px

  &__card-line
    width 60px
    height: 3px
    background-color $color-red
    +above($breakpoints.sm)
      width 40px
    +above($breakpoints.md)
      width 50px
    +above($breakpoints.xxl)
      width 60px

  &__card-title
    color: #fff
    padding 15px 0 10px 0
    font-size: 20px
    line-height: 116%
    +above($breakpoints.sm)
      padding 20px 0 12px 0
      font-size: 21px
    +above($breakpoints.md)
      padding 25px 0 12px 0
      font-size: 24px
    +above($breakpoints.xxl)
      padding 30px 0 12px 0
      font-size: 32px

  &__img
    width 280px
    height: auto
    border-radius: 10px
    +above($breakpoints.sm)
      width 240px
    +above($breakpoints.md)
      width 300px
    +above($breakpoints.xxl)
      width 352px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    margin-top 15px
    +above($breakpoints.sm)
      gap: 5px
      flex-direction: row
      justify-content space-between
      margin-top 30px
    +above($breakpoints.md)
      margin-top 60px
    +above($breakpoints.xxl)
      margin-top 82px

  &__bottom-text
    padding 10px 0
    +above($breakpoints.sm)
      padding 10px 0 15px
    +above($breakpoints.md)
      padding 12px 0 20px
    +above($breakpoints.xxl)
      padding 16px 0 24px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
    +above($breakpoints.md)
      gap: 10px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 155px !important
      +above($breakpoints.md)
        width 207px !important
      +above($breakpoints.xxl)
        width 241px !important

  &__agree-wrapper
    display: flex
    justify-content center
    padding-top 10px
    color: #CBCBCB
    +above($breakpoints.sm)
      justify-content start
      padding-top 10px
    +above($breakpoints.md)
      padding-top 12px
    +above($breakpoints.xxl)
      padding-top 16px

  &__bottom-img
    width 280px
    height: auto
    border-radius: 10px
    +above($breakpoints.sm)
      width 240px
    +above($breakpoints.md)
      width 300px
    +above($breakpoints.xxl)
      width 352px
