.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 4px

  &__logo
    width 140px
    height: auto
    +above($breakpoints.sm)
      width 170px
    +above($breakpoints.md)
      width 210px
    +above($breakpoints.xxl)
      width 236px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
      cursor pointer

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 12px
      height: 12px
