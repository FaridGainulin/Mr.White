.footer
  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 18px
    +above($breakpoints.xxl)
      gap: 18px

  &__logo
    width 120px
    height: auto
    +above($breakpoints.sm)
      width 130px
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 175px

  &__block
    display: none
    +above($breakpoints.md)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
      cursor pointer

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 12px
      height: 12px
